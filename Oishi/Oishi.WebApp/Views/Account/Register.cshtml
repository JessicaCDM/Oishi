@model Oishi.Shared.ViewModels.Account.RegisterViewModel
@{
    Layout = null;
}

<html lang="en" class="history svg video supports boxshadow csstransforms3d csstransitions
backgroundcliptext webkit chrome win js sticky-header-enabled sticky-header-negative boxed"
      style="background-image: url('/img/patterns/subtle_grunge.png');">

<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <title>Criar Conta</title>

    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-star-rating/css/star-rating.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-star-rating/themes/krajee-fas/theme.min.css">
    <link rel="stylesheet" href="/css/main.css">

</head>

<body style="background-color:transparent;">
    <section>
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Criar Conta</h2>

                                <form asp-action="Register">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Username" class="form-label" for="form3Example1cg">Nome*</label>
                                        <input asp-for="Username" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Email" class="form-label" for="form3Example3cg">Email*</label>
                                        <input asp-for="Email" type="email" id="form3Example3cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password" class="form-label" for="form3Example4cg">Password*</label>
                                        <input asp-for="Password" type="password" id="form3Example4cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="ConfirmPassword" class="form-label" for="form3Example4cdg">Confirme password*</label>
                                        <input asp-for="ConfirmPassword" type="password" id="form3Example4cdg" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit"
                                                style="border:solid; width:100%; height:50px"
                                                class="btn-block btn-lg gradient-custom-4 text-body">
                                            Criar
                                        </button>
                                    </div>

                                    <p class="text-center text-muted mt-5 mb-0">
                                        Já é registado? <a asp-controller="Account" asp-action="Login"
                                                           class="fw-bold text-body"><u>Faça Login</u></a>
                                    </p>

                                    <p style="text-align:center; color:black; font-size: 20px">Ou</p>
                                    <br />
                                    <a asp-controller="Account" asp-action="RegisterExternalLogin" asp-route-provider="Google" class="btn-google m-b-20">
                                        <img src="~/img/icons/icon-google.png" alt="GOOGLE">
                                        Google
                                    </a>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>