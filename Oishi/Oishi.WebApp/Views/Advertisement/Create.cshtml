@model Oishi.Shared.ViewModels.Advertisement.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
<h1 class="display-4">Criar anúncio</h1>
</div>
@if (ViewData["Success"] != null)
{
    <div class="text-success">@ViewData["Success"]</div>
}
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Título</label>
		<input asp-for="Title" type="text" class="form-control" id="title" placeholder="Inserir título">
    </div>
    <div class="form-group">
        <label asp-for="SubcategoryId">Selecione a subcategoria do artigo</label>
            <select asp-for="SubcategoryId" class="form-control" id="subcategory">
                @foreach (var subcategory in Model.Subcategories)
                {
                 <option value="@subcategory.Id">@subcategory.Description</option> 
                }
            </select>
    </div>

    <div class="form-group">
        <label asp-for="MunicipalityOrCityId">Inserir localidade</label>
        <input asp-for="MunicipalityOrCityId"  type="text" class="form-control" id="municipalityorcity">
    </div>

    <div class="form-group">
        <label asp-for="Price">Inserir preço</label>
        <input asp-for="Price" type="text" class="form-control" id="price" placeholder="Euros">
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label for="image">Inserir imagem</label><br />
        <input type="file" class="form-control-file" id="image">
    </div>

    <div align="left">
            <button class="btn btn-secondary btn-lg" type="submit" style="position: relative; left: 93%; background-color: lightpink;">Criar</button>
    </div>
    <br />
</form>   
