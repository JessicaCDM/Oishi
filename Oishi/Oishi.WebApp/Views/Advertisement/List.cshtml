@model List<Oishi.Shared.ViewModels.Advertisement.AdvertisementViewModel>

<h1>Search Results</h1>

@if (Model.Count == 0)
{
    <p>No results found.</p>
}
else
{
    <p>Showing @Model.Count results:</p>

    <ul>
        @foreach (var advertisement in Model)
        {
            <li>
                <h2>@advertisement.Title</h2>
                <p><strong>Price:</strong> @advertisement.Price</p>
            </li>
        }
    </ul>
}