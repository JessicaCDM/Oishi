@model IEnumerable<Oishi.Data.Models.UserAccount>

@{
    ViewData["Title"] = "Utilizadores";
}

<table class="table table-striped table-hover caption-top">
    <caption>@(ViewData["Title"])<a class="btn btn-sm btn-success float-end" asp-action="Create" role="button">Criar <i class="fa-solid fa-plus"></i></a></caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccountStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLogin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourceImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccountStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile.Code)
                </td>
                <td class="text-end">
                    <a class="btn btn-xs btn-outline-primary" asp-action="Edit" role="button"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a class="btn btn-xs btn-outline-info" asp-action="Details" role="button"><i class="fa-solid fa-magnifying-glass-plus"></i></a>
                    <a class="btn btn-xs btn-outline-danger" asp-action="Delete" role="button"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
